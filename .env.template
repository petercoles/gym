# Gym Booking Bot Configuration - Multi-User Support
# Copy this file to .env and fill in your actual credentials

# Your gym's website URL (required)
GYM_URL=your_gym_website_url

# Peter's credentials
PETER_USERNAME=peters_username_or_email
PETER_PASSWORD=peters_password

# Adrienne's credentials
ADRIENNE_USERNAME=adriennes_username_or_email
ADRIENNE_PASSWORD=adriennes_password

# Lucy's credentials
LUCY_USERNAME=lucys_username_or_email
LUCY_PASSWORD=lucys_password

# Run in headless mode (true/false)
# Set to false if you want to see the browser while it's running
HEADLESS=false

# ================================
# SCHEDULE CONFIGURATION (S3)
# ================================

# S3 Schedule Configuration (required)
SCHEDULE_S3_BUCKET=your-aws-s3-bucket-name
SCHEDULE_S3_KEY=schedule.csv

# AWS Credentials (required)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=eu-west-2

# ================================
# EMAIL NOTIFICATIONS (Optional)
# ================================

# Email settings for booking failure notifications
# Leave blank to disable email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=your-email@gmail.com
SENDER_PASSWORD=your-email-app-password
RECIPIENT_EMAIL=your-notification-email@gmail.com
